<%- include('./partials/header.ejs') %>

<div class="product-detail-container">
    
    <div class="product-media">
        <img src="<%= product.imageUrl %>" alt="<%= product.name %>" class="product-detail-image">
        
        <% if (product.model3DPath) { %>
            <div id="three-js-container" data-model-path="<%= product.model3DPath %>">
                </div>
        <% } %>
    </div>

    <div class="product-info">
        <h1 class="page-title"><%= product.name %></h1>
    <p class="product-detail-price"><%= product.price.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %></p>
        <p class="product-description"><%= product.description %></p>
        
        <form action="/cart/add" method="POST" class="cart-form">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <label for="quantity">Quantity:</label>
            <input type="number" name="quantity" id="quantity" value="1" min="1" max="<%= product.stock %>">
            <button type="submit" class="btn btn-primary">Add to Cart</button>
        </form>
    </div>
    
</div>

<%- include('./partials/footer.ejs') %>